// Se incluye la libreria AMBOT.h
#include <AMBOT.h>

// Se crea el objeto AMBot 
AMBOT AMBot;

void setup() {
  // Inicializamos el bus serial a una velocidad de 9600 baudios
  Serial.begin(9600);
  // Enviamos un mensaje
  Serial.println("Test de LDR");
  // Inicializamos el AMBot
  AMBot.inicializarAMBot();
}

void loop() {
  // Se evalua el estado de cada uno de los pulsadores
  Serial.println("Valor analogico de la LDR: " + String(AMBot.leerLDR()));
  // Pequeño delay para no saturar el monitor serial
  delay(1000);
}
