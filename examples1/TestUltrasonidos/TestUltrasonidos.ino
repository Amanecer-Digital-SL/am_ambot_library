// Se incluye la libreria AMBOT.h
#include <AMBOT.h>

// Se crea el objeto AMBot 
AMBOT AMBot;

void setup() {
  // Inicializamos el bus serial a una velocidad de 9600 baudios
  Serial.begin(9600);
  // Enviar un mensaje por el monitor serial
  Serial.println("Test de Ultrasonidos");
  // Inicializamos el AMBot
  AMBot.inicializarAMBot();
}

void loop() {
  // Enviar la distancia de un obstaculo por el monitor serial
  Serial.println("Distancia de un obstaculo frontal: " + String(AMBot.obtenerDistancia()) + "mm");
}
